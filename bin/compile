#!/usr/bin/env bash

set -e

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
set -o nounset    # fail on unset variables
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

mkdir -p "$BUILD_DIR/.fbl_user/"

echo "$BUILD_DIR"
cd $BUILD_DIR

# Install SWIG
echo "-----> Fetching and installing SWIG 2"
curl https://www.cdnconecta.com.br/ftp/PainelRevenda/swig-2.0.5.tar.gz --output /tmp/swig.tar.gz

echo "SWIG downloaded"

echo "-----> Installing ..."
tar xzf /tmp/swig.tar.gz -C /tmp

rm -rf "$BUILD_DIR/.fbl_user/swig-2.0.5"

mv /tmp/swig-2.0.5 "$BUILD_DIR/.fbl_user"

export SWIG_LIB="$BUILD_DIR/.fbl_user/swig-2.0.5"

cd $SWIG_LIB

./configure --without-pcre
make
make install

which swig

echo "SWIG installed"

# # End Install SWIG
